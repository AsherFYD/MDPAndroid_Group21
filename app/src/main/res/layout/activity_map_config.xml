<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_imageBearing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="356dp"
        android:layout_marginLeft="356dp"
        android:layout_marginTop="52dp"
        android:text="Image Bearing:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_imageID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="24dp"
        android:text="Obstacle ID:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/bearingSpinner"
        android:layout_width="124dp"
        android:layout_height="23dp"
        android:layout_marginStart="472dp"
        android:layout_marginLeft="472dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/imageIDSpinner"
        android:layout_width="126dp"
        android:layout_height="22dp"
        android:layout_marginStart="472dp"
        android:layout_marginLeft="472dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/changeDirectionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="12dp"
        android:contentDescription="TODO"
        app:backgroundTint="#82B1FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startpointToggleBtn"
        app:srcCompat="@drawable/baseline_explore_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/addObstacleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="380dp"
        android:layout_marginRight="380dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#82B1FF"
        app:layout_constraintTop_toBottomOf="@+id/waypointToggleBtn"
        app:srcCompat="@drawable/baseline_dangerous_24"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/updateMapBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="384dp"
        android:layout_marginLeft="384dp"
        android:layout_marginTop="32dp"
        android:text="Preload Obstacles"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeDirectionBtn"
        tools:visibility="invisible" />

    <Switch
        android:id="@+id/autoManualSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:text="MANUAL"
        android:textFontWeight="500"
        android:textOff="@string/manual"
        android:textOn="@string/auto"
        android:textSize="28px"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="364dp"
        android:layout_marginRight="364dp"
        android:text="Reset Map"
        android:textColor="@color/colorBlack"
        app:backgroundTint="#82B1FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeDirectionBtn" />

    <ToggleButton
        android:id="@+id/startpointToggleBtn"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="12dp"
        android:textOff="SET STARTPOINT"
        android:textOn="CANCEL"
        android:background="#82B1FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/waypointToggleBtn"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="276dp"
        android:layout_marginRight="276dp"
        android:textOff="SET WAYPOINT"
        android:textOn="CANCEL"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="408dp"
        android:layout_marginLeft="408dp"
        android:layout_marginTop="84dp"
        android:text="Drag:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_changeObstacle"
        android:layout_width="114dp"
        android:layout_height="24dp"
        android:layout_marginStart="328dp"
        android:layout_marginLeft="328dp"
        android:layout_marginTop="116dp"
        android:text="Change Obstacle:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/dragSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/textView_drag"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/changeObstacleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toEndOf="@+id/textView_changeObstacle"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/exploreToggleBtn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#82B1FF"
        android:text="Exploration"
        android:textOff="Imagerec START"
        android:textOn="STOP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn"
        tools:ignore="MissingConstraints" />

    <ToggleButton
        android:id="@+id/fastestToggleBtn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#82B1FF"
        android:text="Fastest"
        android:textOff="Fastest START"
        android:textOn="STOP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/exploreTimeTextView2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreToggleBtn3" />

    <TextView
        android:id="@+id/fastestTimeTextView2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastestToggleBtn3" />

    <Button
        android:id="@+id/exploreResetImageBtn2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#E47B7B"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreToggleBtn3"
        tools:text="Reset" />

    <Button
        android:id="@+id/fastestResetImageBtn2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#E47B7B"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastestToggleBtn3"
        tools:text="Reset" />

</androidx.constraintlayout.widget.ConstraintLayout>