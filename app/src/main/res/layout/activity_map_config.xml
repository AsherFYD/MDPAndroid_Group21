    <Button
        android:id="@+id/resetBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="#82B1FF"
        android:text="Reset Map"
        android:textColor="@color/colorBlack"
        app:backgroundTint="#82B1FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startpointToggleBtn" />

    <ToggleButton
        android:id="@+id/startpointToggleBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:background="#82B1FF"
        android:textOff="SET STARTPOINT"
        android:textOn="CANCEL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/waypointToggleBtn"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:textOff="SET WAYPOINT"
        android:textOn="CANCEL"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="383dp" />

    <TextView
        android:id="@+id/textView_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="490dp"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="100dp"
        android:text="Drag:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_changeObstacle"
        android:layout_width="114dp"
        android:layout_height="24dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="98dp"
        android:text="Change Obstacle:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/dragSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/textView_drag"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/changeObstacleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/textView_changeObstacle"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/exploreToggleBtn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="60dp"
        android:background="#82B1FF"
        android:text="Exploration"
        android:textOff="Imagerec START"
        android:textOn="STOP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn"
        tools:ignore="MissingConstraints" />

    <ToggleButton
        android:id="@+id/fastestToggleBtn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:background="#82B1FF"
        android:text="Fastest"
        android:textOff="Fastest START"
        android:textOn="STOP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/exploreTimeTextView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/exploreResetBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreToggleBtn3" />

    <TextView
        android:id="@+id/fastestTimeTextView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/exploreResetBtn"
        app:layout_constraintTop_toBottomOf="@+id/fastestToggleBtn3" />

    <ImageButton
        android:id="@+id/exploreResetBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_black_background"
        android:text="Reset"
        app:layout_constraintStart_toEndOf="@+id/exploreTimeTextView2"
        app:layout_constraintTop_toBottomOf="@+id/exploreToggleBtn3"
        app:srcCompat="@drawable/ic_refresh" />

    <ImageButton
        android:id="@+id/fastestResetBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/border_black_background"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fastestTimeTextView2"
        app:layout_constraintTop_toBottomOf="@+id/fastestToggleBtn3"
        app:srcCompat="@drawable/ic_refresh" />

</androidx.constraintlayout.widget.ConstraintLayout>